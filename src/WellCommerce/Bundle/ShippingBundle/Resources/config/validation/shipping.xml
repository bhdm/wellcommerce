<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\ShippingBundle\Entity\ShippingMethod">
        <property name="translations">
            <constraint name="Valid" />
        </property>
        <property name="costs">
            <constraint name="Valid" />
        </property>
        <property name="calculator">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="hierarchy">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="currency">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <property name="tax">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
    </class>

    <class name="WellCommerce\Bundle\ShippingBundle\Entity\ShippingMethodTranslation">
        <property name="name">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
    </class>

    <class name="WellCommerce\Bundle\ShippingBundle\Entity\ShippingMethodCost">
        <property name="rangeFrom">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="rangeTo">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
