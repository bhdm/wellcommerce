<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="oauth.facebook.connect" path="oauth/connect/facebook">
        <default key="_controller">oauth.controller.facebook:connectAction</default>
    </route>

    <route id="oauth.facebook.check" path="oauth/check/facebook">
        <default key="_controller">oauth.controller.facebook:checkAction</default>
    </route>
</routes>
