<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\ClientBundle\Entity\Client">
        <property name="clientDetails">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
        <property name="billingAddress">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
        <property name="shippingAddress">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
        <property name="contactDetails">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\ClientBundle\Entity\ClientDetails">
        <constraint name="WellCommerce\Bundle\ClientBundle\Doctrine\Validator\Constraints\UniqueUsername">
            <option name="groups">
                <value>client_registration</value>
            </option>
        </constraint>
        <property name="conditionsAccepted">
            <constraint name="EqualTo">
                <option name="value">1</option>
                <option name="message">client.conditions_not_accepted</option>
                <option name="groups">
                    <value>client_registration</value>
                </option>
            </constraint>
        </property>
        <property name="username">
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_registration</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>client_registration</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="groups">
                    <value>client_registration</value>
                </option>
            </constraint>
        </property>
        <property name="discount">
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">100</option>
                <option name="groups">
                    <value>client_registration</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\ClientBundle\Entity\ClientGroup">
        <property name="discount">
            <constraint name="NotBlank">
                <option name="message">client_group.validation.error.not_blank</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">100</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\ClientBundle\Entity\ClientContactDetails">
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>client_registration</value>
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_registration</value>
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>client_registration</value>
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_registration</value>
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="phone">
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_registration</value>
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>client_registration</value>
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="secondaryPhone">
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_settings</value>
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\ClientBundle\Entity\ClientBillingAddress">
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="street">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="streetNo">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="flatNo">
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="postCode">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="city">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_address</value>
                </option>
            </constraint>
        </property>
        <property name="country">
            <constraint name="Country">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\ClientBundle\Entity\ClientShippingAddress">
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="street">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="streetNo">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="flatNo">
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="postCode">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="city">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
        <property name="country">
            <constraint name="Country">
                <option name="groups">
                    <value>order_shipping_address</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
