<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.shop.index" path="/index">
        <default key="_controller">shop.controller.admin:indexAction</default>
        <option key="require_admin_permission">shop.index</option>
    </route>

    <route id="admin.shop.grid" path="/grid">
        <default key="_controller">shop.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">shop.index</option>
    </route>

    <route id="admin.shop.add" path="/add">
        <default key="_controller">shop.controller.admin:addAction</default>
        <option key="require_admin_permission">shop.add</option>
    </route>

    <route id="admin.shop.edit" path="/edit/{id}">
        <default key="_controller">shop.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">shop.edit</option>
    </route>

    <route id="admin.shop.delete" path="/delete/{id}">
        <default key="_controller">shop.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">shop.delete</option>
    </route>

    <route id="admin.shop.change_context" path="/change/{id}">
        <default key="_controller">shop.controller.admin:changeContextAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">shop.index</option>
    </route>
</routes>
