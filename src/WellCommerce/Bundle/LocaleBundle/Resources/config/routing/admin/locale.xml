<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.locale.index" path="/index">
        <default key="_controller">locale.controller.admin:indexAction</default>
        <option key="require_admin_permission">locale.index</option>
    </route>

    <route id="admin.locale.grid" path="/grid">
        <default key="_controller">locale.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">locale.index</option>
    </route>

    <route id="admin.locale.add" path="/add">
        <default key="_controller">locale.controller.admin:addAction</default>
        <option key="require_admin_permission">locale.add</option>
    </route>

    <route id="admin.locale.edit" path="/edit/{id}">
        <default key="_controller">locale.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">locale.edit</option>
    </route>

    <route id="admin.locale.delete" path="/delete/{id}">
        <default key="_controller">locale.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">locale.delete</option>
    </route>
</routes>
