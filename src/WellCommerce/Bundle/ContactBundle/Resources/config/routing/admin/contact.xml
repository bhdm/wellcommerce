<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.contact.index" path="/index">
        <default key="_controller">contact.controller.admin:indexAction</default>
        <option key="require_admin_permission">contact.index</option>
    </route>

    <route id="admin.contact.grid" path="/grid">
        <default key="_controller">contact.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">contact.index</option>
    </route>

    <route id="admin.contact.add" path="/add">
        <default key="_controller">contact.controller.admin:addAction</default>
        <option key="require_admin_permission">contact.add</option>
    </route>

    <route id="admin.contact.edit" path="/edit/{id}">
        <default key="_controller">contact.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">contact.edit</option>
    </route>

    <route id="admin.contact.delete" path="/delete/{id}">
        <default key="_controller">contact.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">contact.delete</option>
    </route>
</routes>
