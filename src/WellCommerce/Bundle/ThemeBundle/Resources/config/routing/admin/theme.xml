<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.theme.index" path="/theme/index">
        <default key="_controller">theme.controller.admin:indexAction</default>
        <option key="require_admin_permission">theme.index</option>
    </route>

    <route id="admin.theme.grid" path="/theme/grid">
        <default key="_controller">theme.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">theme.index</option>
    </route>

    <route id="admin.theme.add" path="/theme/add">
        <default key="_controller">theme.controller.admin:addAction</default>
        <option key="require_admin_permission">theme.add</option>
    </route>

    <route id="admin.theme.edit" path="/theme/edit/{id}">
        <default key="_controller">theme.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">theme.edit</option>
    </route>

    <route id="admin.theme.delete" path="/theme/delete/{id}">
        <default key="_controller">theme.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">theme.delete</option>
    </route>
</routes>
