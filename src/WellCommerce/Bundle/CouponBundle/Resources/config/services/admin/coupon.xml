<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="coupon.manager.admin" class="WellCommerce\Bundle\CouponBundle\Manager\Admin\CouponManager">
            <argument type="service" id="coupon.repository"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <argument type="service" id="coupon.factory"/>
            <argument type="service" id="coupon.form_builder.admin"/>
            <argument type="service" id="coupon.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.controller.admin" class="WellCommerce\Bundle\CouponBundle\Controller\Admin\CouponController">
            <argument type="service" id="coupon.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.dataset.query_builder" class="WellCommerce\Bundle\CouponBundle\DataSet\Admin\CouponDataSetQueryBuilder" public="false">
            <argument type="service" id="coupon.repository"/>
        </service>

        <service id="coupon.dataset.admin" class="WellCommerce\Bundle\CouponBundle\DataSet\Admin\CouponDataSet">
            <argument type="service" id="coupon.dataset.query_builder"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="coupon.datagrid" class="WellCommerce\Bundle\CouponBundle\DataGrid\CouponDataGrid">
            <argument key="identifier">coupon</argument>
            <argument type="service" id="coupon.dataset.admin"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.form_builder.admin" class="WellCommerce\Bundle\CouponBundle\Form\Admin\CouponFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
