<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.dictionary.index" path="/index">
        <default key="_controller">dictionary.controller.admin:indexAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">dictionary.index</option>
    </route>

    <route id="admin.dictionary.grid" path="/grid">
        <default key="_controller">dictionary.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">dictionary.index</option>
    </route>

    <route id="admin.dictionary.add" path="/add">
        <default key="_controller">dictionary.controller.admin:addAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">dictionary.add</option>
    </route>

    <route id="admin.dictionary.edit" path="/edit/{id}">
        <default key="_controller">dictionary.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">dictionary.edit</option>
    </route>

    <route id="admin.dictionary.sync" path="/sync">
        <default key="_controller">dictionary.controller.admin:syncAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">dictionary.edit</option>
    </route>

    <route id="admin.dictionary.delete" path="/delete/{id}">
        <default key="_controller">dictionary.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">dictionary.delete</option>
    </route>
</routes>
